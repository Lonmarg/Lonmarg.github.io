{{!-- DISPLAY ALL CURRENT MARINES --}}
    {{#each marine}}
    <tr>
        <td>
            <form action ="/" method="post" class= "mb-4">
                <div class="form-group">
                    <form action ="/" method="post" class= "mb-4">
                        <div class = "d-flex flex-row btn-group p-2">
                            <input type="button" name="-Squad" value="-" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </form>
        </td>
        <td>{{marine.spaceMarineID}}</td>
        <td>{{marine.assaultSquadID}}</td>
        <td>{{marine.name}}</td>
        {{#each equipments}}
        <td>
            {{!-- EACH EQUIPMENTS ASSOCIATED --}}
        </td>
        {{/each}}
        <td>{{marine.basePointCost}}</td>
    </tr>
    {{/each}}
