				</form>
			</td>
			<td>
				<form action ="/" method="post" class= "mb-4">
				<input hidden type="int" name="reps" class="form-control" value="{{this.id}}">
				<input type="submit" name="Delete Exercise" value="Delete Exercise" class="btn btn-primary btn-block">
				</form>
			</td>
  		</tr>
	{{/each}}
	<form action ="/" method="post" class= "mb-4">
		<tr>
			<th scope="row">
				<div class="form-group">
					<label for="name">Name</label>
					<input type="text" name="name" class="form-control" value="Name">
				</div>
			</th>
			<td>
				<div class="form-group">
					<label for="reps">Reps</label>
