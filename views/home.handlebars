    	{{#each columns}}
			<th scope="col">{{this.COLUMN_NAME}}</li>
		{{/each}}
    </tr>
  </thead>
  <tbody>
  	{{#each table}}
  		<tr>
			<td hidden>{{this.id}}</td>
  			<th scope="row">{{this.name}}</th>
